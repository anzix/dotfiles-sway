# Переменные
set {
	# Ставит win клавишу как основную
	$mod Mod4
	# Клавиша alt
	$alt Mod1
	# Терминал
	$term alacritty
}

# Заставлять юзать для приложений и игр xwayland
xwayland force


#smart_borders no_gaps
# gaps inner 4
# gaps outer 3
smart_gaps off
#gaps bottom 0


# Убираеть Title bar
default_border pixel 2
default_floating_border pixel 2

# Шрифт заголовка окна (в режиме layout)
font pango:monospace 8


# Media control
bindsym --locked {
    XF86AudioLowerVolume exec pulsemixer --change-volume -2
    XF86AudioRaiseVolume exec pulsemixer --change-volume +2
    XF86AudioMute        exec pulsemixer --toggle-mute
	# Media player controls via playerctl (also require package mpdris2)
    XF86AudioPlay exec playerctl play-pause
    XF86AudioNext exec playerctl next
    XF86AudioPrev exec playerctl previous
	XF86AudioStop exec playerctl stop
}

# Юзать мышь с зажатой клавишей win для перемещение окна
floating_modifier $mod normal

# Запуск терминала
bindsym $mod+Return exec $term

# Убить окно которое в фокусе
bindsym $mod+q kill

# Запуск Wofi
bindsym $mod+d exec wofi --show drun --allow-images

bindsym {
	# Менять фокус окна vim клавишами
	$mod+h focus left
	$mod+j focus down
	$mod+k focus up
	$mod+l focus right
	# Менять фокус окна стрелочками
	$mod+Left focus left
	$mod+Down focus down
	$mod+Up focus up
	$mod+Right focus right
	# Двигать окно в фокусе vim клавишами
	$mod+Shift+h move left
	$mod+Shift+j move down
	$mod+Shift+k move up
	$mod+Shift+l move right
	# Двигать окно в фокусе стрелочками
	$mod+Shift+Left move left
	$mod+Shift+Down move down
	$mod+Shift+Up move up
	$mod+Shift+Right move right
}
